{
  "name": "cartelera",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "url": "https://github.com/uptagprojects/cartelera"
  },
  "engines": {
    "node": ">=20.8.0",
    "npm": ">=10.1.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:integration && npm run test:acceptance",
    "test:unit": "npm run test:jest tests/contexts/**/*/application && npm run test:cypress",
    "test:integration": "npm run test:jest tests/contexts/**/*/infrastructure",
    "test:acceptance": "npm run test:features && npm run test:cypress:e2e",
    "test:features": "TS_NODE_PROJECT=tsconfig/tsconfig.cucumber.json NODE_ENV=test cucumber-js",
    "test:jest": "NODE_ENV=test jest",
    "test:cypress": "TS_NODE_PROJECT=tsconfig/tsconfig.cypress.json NODE_ENV=test cypress run --component",
    "test:cypress:e2e": "start-server-and-test dev http://localhost:3000 \"TS_NODE_PROJECT=tsconfig/tsconfig.cypress.json NODE_ENV=test cypress run --e2e\""
  },
  "dependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@cucumber/cucumber": "^10.8.0",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "ant-path-matcher": "^0.0.5",
    "cypress": "^13.11.0",
    "eslint": "^8.57.0",
    "eslint-config-codely": "^3.1.3",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-hexagonal-architecture": "^1.0.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.3",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
